<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:padding="20dp">

        <TextView
            android:id="@+id/mp3_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/mp3_bitrate_title" />

        <Spinner
            android:id="@+id/mp3_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:entries="@array/mp3_bitrate_entries" 
            android:saveEnabled="true"/>
            
        <!-- <TextView
            android:id="@+id/mp3_select_bitrate"
            android:text="BITRATE"
            android:textIsSelectable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_gravity="left" /> -->
        
    </LinearLayout>

    <!-- inserire gli EditText per le tag mp3 -->
    
    <CheckBox
        android:id="@+id/video_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_video"/>

</LinearLayout>